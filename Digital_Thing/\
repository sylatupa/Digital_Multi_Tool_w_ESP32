            print('left')
            if self.menuApplicationCurser > 0:
                self.menuApplicationCurser = self.menuApplicationCurser - 1
            else:
                print(self.maxMenuCurser)
                self.menuApplicationCurser = self.maxMenuCurser -1
        if a == 'l':
